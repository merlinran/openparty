<%= form_for([@event, @event.topics.build], remote: true) do |f| %>
  <div class="field">
    <%= f.label :name, "话题名称"%><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :estimated_minutes, "预计时长(分钟)" %><br />
    <%= f.text_field :estimated_minutes %>
  </div>
  <div class="field">
    <%= f.label :detail, "详情" %><br />
    <%= f.text_area :detail %>
  </div>
  <div class="actions">
    <%= f.submit '提交话题' %>
  </div>
<% end %>
