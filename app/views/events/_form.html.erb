<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "活动名称" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :hold_date, "举办日期" %><br />
    <%= f.text_field :hold_date, {class: 'datepicker'} %>
  </div>
  <div class="field">
    <%= f.label :location, "举办地点" %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :poster_url, "活动海报" %><br />
    <%= f.text_field :poster_url %>
  </div>
  <div class="field">
    <%= f.label :detail, "活动详情" %><br />
    <%= f.kindeditor :detail, :simple_mode => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
