<div id="userNav">
  <% if current_user %>
    <%= image_tag current_user.avatar_url, alt: "#{current_user.name}的头像", class: 'avatar' %>
    <span id="userName"><%= current_user.name %></span>
    <ul id="userMenu">
      <li><%= link_to "个人资料设置", edit_user_path %></li>
      <li><%= link_to "退出", logout_path %></li>
    </ul>
  <% else %>
    <ul>
      <li><a href="/signup">注册</a></li>
      <li><a href="/login">登录</a></li>
    </ul>
  <% end %>
</div>

